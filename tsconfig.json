{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "removeComments": false,
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["src"]
}
